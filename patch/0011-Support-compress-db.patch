+  int rc = SQLITE_OK;
+  sqlite3_stmt *stmt = NULL;
+  const char *sql = "UPDATE vfs_compression SET pagesize=?;";
+
+  if( sqlite3_prepare_v2(db, sql, -1, &stmt, NULL)==SQLITE_OK ){
+    sqlite3_bind_int(stmt, 1, pagesize);
+    if( sqlite3_step(stmt)!=SQLITE_DONE ){
